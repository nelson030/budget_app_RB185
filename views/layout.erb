<!doctype html>
<html lang="en-US">
  <head>
    <title>Budget App</title>
    <meta charset="UTF-8">
    <style>
    table, th, td {
      border: 1px solid black;
    }
    </style>
  </head>
  <body>
    <header>
      <h1>Budget App</h1>
      <a href="/">Home</a>
    </header>

    <% if session[:error] %>
      <div class="flash error">
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <% if session[:success] %>
      <div class="flash success">
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <main>
      <%= yield %>
    </main>
  </body>
</html>